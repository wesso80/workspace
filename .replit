language = "python"
run = "python -m uvicorn main:app --host 0.0.0.0 --port 8080"
modules = ["nodejs-20", "postgresql-16", "python-3.11"]
[deployment]
run = ["streamlit", "run", "app.py", "--server.port", "8080", "--server.address", "0.0.0.0"]
deploymentTarget = "cloudrun"
[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Market Scanner Pro"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Native App (Expo)"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Native App Preview"

[[workflows.workflow]]
name = "Market Scanner Pro"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Native App (Expo)"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd native-app && npm install --legacy-peer-deps 2>/dev/null && npx expo start --lan"

[[workflows.workflow]]
name = "Native App Preview"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd native-app-preview && python -m http.server 5001"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 5000

